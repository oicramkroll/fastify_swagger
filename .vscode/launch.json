{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "▶ Debug Vitest (tests)",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["--run"],
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "smartStep": true
    },

    {
      "type": "node",
      "request": "launch",
      "name": "▶ Debug Fastify (server)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
